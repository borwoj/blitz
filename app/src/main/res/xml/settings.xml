<?xml version="1.0" encoding="utf-8"?>
<androidx.preference.PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceCategory
        app:key="game_settings_category"
        app:title="@string/game_settings_category_title">

        <Preference
            android:title="@string/game_duration_pref_title"
            app:icon="@drawable/ic_timer_black_24dp"
            app:key="game_time_settings" />

        <Preference
            android:title="@string/game_type_pref_title"
            app:icon="@drawable/ic_chess_pawn"
            app:key="game_type_settings" />
    </PreferenceCategory>

    <PreferenceCategory
        app:key="app_settings_category"
        app:title="@string/app_settings_category_title">

        <SwitchPreference
            app:defaultValue="true"
            app:icon="@drawable/ic_baseline_music_note_24"
            app:key="sound_enabled"
            app:title="@string/sound_pref_title" />
    </PreferenceCategory>

    <PreferenceCategory
        app:key="about_category"
        app:title="@string/about">

        <Preference
            app:icon="@drawable/ic_baseline_contact_support_24"
            app:key="feedback"
            app:summary="Report technical issues or suggest new features"
            app:title="Send feedback" />

        <Preference
            app:key="version"
            app:title="App version" />
    </PreferenceCategory>
</androidx.preference.PreferenceScreen>