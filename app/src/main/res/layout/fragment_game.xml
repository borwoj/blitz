<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:keepScreenOn="true"
  android:id="@+id/root"
  >


  <net.borysw.blitz.game.presentation.TimerView
    android:id="@+id/timerViewA"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:background="@color/b"
    android:foreground="?android:selectableItemBackgroundBorderless"
    app:layout_constraintBottom_toTopOf="@id/timerViewB"
    app:layout_constraintTop_toTopOf="parent"
    android:rotation="180"
    />

  <net.borysw.blitz.game.presentation.TimerView
    android:id="@+id/timerViewB"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:background="@color/b"
    android:foreground="?android:selectableItemBackgroundBorderless"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintTop_toBottomOf="@id/timerViewA"
    />


  <com.google.android.material.floatingactionbutton.FloatingActionButton
    android:id="@+id/start"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:backgroundTint="@color/a"
    app:borderWidth="0dp"
    android:src="@drawable/ic_play_arrow_black_24dp"
    android:tint="@color/white"
    app:fabSize="normal"
    app:layout_constraintBottom_toTopOf="@id/timerViewB"
    app:layout_constraintEnd_toStartOf="@id/settings"
    app:layout_constraintTop_toBottomOf="@id/timerViewA"
    />

  <com.google.android.material.floatingactionbutton.FloatingActionButton
   android:id="@+id/settings"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:backgroundTint="@color/b"
    app:borderWidth="0dp"
    android:src="@drawable/ic_settings_black_24dp"
    android:tint="@color/a"
    app:fabSize="mini"
    app:layout_constraintBottom_toTopOf="@id/timerViewB"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toBottomOf="@id/timerViewA"
    />

</androidx.constraintlayout.widget.ConstraintLayout>